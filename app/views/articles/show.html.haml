.article{ id: dom_id(@article) }
  %h1= @article.title

  %section
    = simple_format @article.body

  %footer
    %ul
      %li= link_to '編集', edit_article_path(@article)
      %li= link_to '削除', article_path(@article), method: :delete, confirm: '削除します。よろしいですか？'
      %li
        %time= l @article.created_at

= link_to '一覧', articles_path
